	}
}


function _toMoney (str) {
	var num = String(str);
	try {
		while((/(-?[0-9]+)([0-9]{3})/).test(num)) {
			num = num.replace((/(-?[0-9]+)([0-9]{3})/), "$1,$2");
		}
	} catch (e) {
		//alert(e);
	}
	return num;
}
