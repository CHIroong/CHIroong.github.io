function Naver() {
	var _this = this;
	
	// 네이버 광고 불러오기
	_this.initNaverAd = function(type) {
		var url = '';
		var params = {
			nowUrl : document.location.href,
			refererUrl : parent.document.referrer
		}

		if(type == 'list') {
			url = API_HOST + '/naverAdSearch';
			params.kwd1 = $('#sv').val();
			params.cnt = 2;

		} else if(type == 'view') {
			url = API_HOST + '/naverAd';
			
			var title = util.cutByte($('#subject').val(), 90);
			var content = util.cutByte($('#content').val(), 990);
			
			params.mainTag = $('#mainTag').val();
			params.boardName = $('#boardName').val();
			params.title = title;
			params.content = content;
			params.cnt = 4;
		} else if(type == 'totalSearch') {
			url = API_HOST + '/naverAdSearch';
			params.kwd1 = $('#kwd1').val();
			params.cnt = 2;
		}

		$.ajax({
			url: url,
			type: 'GET',
			data: params,
			success: function(result) {
				if(result.ads.length > 0){
					var html = '';
					html +='	<div class="naver_ad">';
					html +='		 <div class="naver_pwlink">';
					html +='		 	<span class="pwlink">파워링크</span>';
					html +='			<a href="https://saedu.naver.com/adbiz/searchad/intro.nhn" class="naver_info" target="_blank" rel="nofollow"><span class="fa fa-exclamation-circle"></span> 등록안내</a>';
					html +='		 </div>';
					html +='		 <div class="naver_list">';
					html +='			 <ul>';

					var naverCount = 1;
					$.each(result.ads, function(i, v) {
						html +='				<li class="banner_list">';
						html +='					<div class="naver_num"><span>'+naverCount+'</span></div>';
						html +='					<div class="naver_content">';
						html +='					<a href="'+v.cUrl+'"" target="_blank" class="banner_title" rel="nofollow">';
						html +='						<span>'+ v.title +'';
						if(v.isMobile){
							html +='						<span class="fa fa-mobile"></span>';
						}
						html +='						</span>';
						html +='					</a>';
						html +='					<a href="'+v.cUrl+'"" target="_blank" class="banner_link" rel="nofollow"><span>'+ v.vUrl +'</span></a>';
						html +='					<div class="banner_dec">'+ v.desc +'</div>';
						html +='					</div>';
						html +='				</li>'; 
						naverCount += 1;
					});
					html +='			 </ul>';
					html +='		 </div>';
					html +='	 </div>';

					$('#naverAd').html(html);
				}
			},
			error: function(result) {
				console.log(result);
			}
		});
	};
	
	
	_this.initNaverAdView = function() {}
};

var naver = new Naver();